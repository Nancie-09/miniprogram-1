.detail_image{
    width:100%;
    height:200px;
    box-sizing:border-box;
}
.detail_image image{
    height: 100%;
}

.detail_text{
    padding:30rpx 60rpx;
    font-size:30rpx;
    background: #fff;
    line-height: 45rpx;
    color:#666666;
}
.detail_text .detail_title,
.detail_text .detail_price{
    font-size: 40rpx;
    font-weight: 600;
    line-height: 70rpx;
    color:#000;
}
.detail_text .detail_price{
    color: #e64340;
    margin-left:60rpx;
}
.detail_line{
    width:100%;
    height:1px;
    content: '';
    background: #ddd;
    margin:30rpx 0rpx;
}
.detail_book{
    background:#d24a58;
    font-size: 32rpx;
    color:#fff;
    border-radius: 0rpx;
    margin:40rpx 0rpx 10rpx;
}