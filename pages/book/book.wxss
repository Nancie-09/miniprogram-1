.book_image{
    width:100%;
    height: 200px;
    margin:0rpx;
    padding:0rpx;
}
.book_image image{
    width:100%;
    height: 100%;
}

.book_picker{
    width:100%;
    font-size:30rpx;
    color:#000;
    background: rgb(173, 172, 172);
    padding:20rpx;
    margin:20rpx 0;
}

.book_text{
    padding:20rpx 60rpx 0;
    font-size:30rpx;
    background: #fff;
    line-height: 45rpx;
    color:#666666;
}
.book_text .book_title{
    font-size: 32rpx;
    font-weight: 600;
    line-height: 64rpx;
    color:#000;
}

.book_sur{
    width:100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin:30rpx 0rpx 60rpx;
}
.book_sur .book_date,
.book_sur .book_time{
    width:47%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.book_sur .book_date image{
    width:21px;
    height:21px;  
}
.book_sur .book_time image{
    width:21px;
    height:21px; 
}
.book_sur picker{
    width:220rpx;
    border:1px solid #ddd;
    border-radius:8rpx;
    padding:0rpx 10rpx;
    margin-left:10rpx;
}

.book_input{
    border:1px solid #ddd; 
    border-radius:8rpx;
    padding:0rpx 10rpx;
}
.book{
    background:#d24a58;
    font-size: 32rpx;
    color:#fff;
    border-radius: 8rpx;
    margin:70rpx 0rpx;
}